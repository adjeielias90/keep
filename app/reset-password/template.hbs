{{#auth-wrapper}}
  <div class="reset-password--wrapper">
    <h2 class="creat-account">Recover your account</h2>
    <p class="sign-in">Enter your email and we'll send you password reset instructions.</p>
    <form class="login-form">
      <div class="m-b-20 m-t-20">
        <label for="email">Email</label><br>
        {{input
          name="email"
          type="email"
          class="input-field"
          placeholder="jared@piedpiper.com"
        }}
      </div>
      <p class="sign-in m-b-20">{{#link-to "sign-in" class="login"}}Login{{/link-to}}</p>
      <button class="create-account">Reset Password</button>
    </form>
  </div>
{{/auth-wrapper}}